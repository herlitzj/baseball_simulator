<p id="notice"><%= notice %></p>

<h1>Listing Plays</h1>

<table>
  <thead>
    <tr>
      <th>Player</th>
      <th>Vs hand</th>
      <th>Min</th>
      <th>Max</th>
      <th>Play</th>
      <th>Field</th>
      <th>Fatigue</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @plays.each do |play| %>
      <tr>
        <td><%= play.player_id %></td>
        <td><%= play.vs_hand %></td>
        <td><%= play.min %></td>
        <td><%= play.max %></td>
        <td><%= play.play %></td>
        <td><%= play.field %></td>
        <td><%= play.fatigue %></td>
        <td><%= link_to 'Show', play %></td>
        <td><%= link_to 'Edit', edit_play_path(play) %></td>
        <td><%= link_to 'Destroy', play, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

