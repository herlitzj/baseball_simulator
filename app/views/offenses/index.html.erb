<p id="notice"><%= notice %></p>

<h1>Listing Offenses</h1>

<table>
  <thead>
    <tr>
      <th>Player</th>
      <th>Vs hand</th>
      <th>Ifr</th>
      <th>Ofr</th>
      <th>Df</th>
      <th>Power</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @offenses.each do |offense| %>
      <tr>
        <td><%= offense.player_id %></td>
        <td><%= offense.vs_hand %></td>
        <td><%= offense.ifr %></td>
        <td><%= offense.ofr %></td>
        <td><%= offense.df %></td>
        <td><%= offense.power %></td>
        <td><%= link_to 'Show', offense %></td>
        <td><%= link_to 'Edit', edit_offense_path(offense) %></td>
        <td><%= link_to 'Destroy', offense, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

